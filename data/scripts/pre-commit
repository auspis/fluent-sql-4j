#!/bin/bash

# This script runs spotless:apply on staged files before each commit.
# If formatting fails, the commit is aborted.

# Identify all modified files in the staging area.
STAGED_FILES=$(git diff --cached --name-only --diff-filter=d)

if [ -n "$STAGED_FILES" ]; then
  echo "Formatting files before committing..."
  ./mvnw spotless:apply -P pre-commit

  if [ $? -ne 0 ]; then
    echo "Formatting failed: commit aborted."
    exit 1
  fi
  
  echo "Formatting complete. Adding the reformatted files to git."
  git add $STAGED_FILES
fi

exit 0